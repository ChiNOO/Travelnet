<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#1fec00</item>
        <item name="colorControlNormal">#0055ff</item>
    </style>

    <style name="TravelNet" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@color/foreground_material_dark</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">true</item>
        <item name="android:textColor">#ff0000</item>
    </style>

</resources>
